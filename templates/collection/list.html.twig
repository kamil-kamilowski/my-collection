{% extends "common/base.html.twig" %}

{% block title %}List{% endblock %}

{% block content %}
    <h1>Collection list</h1>

    {% if item_successfully_added %}
        <div class="alert alert-success" role="alert">New item successfully added</div>
    {% endif %}

    <div class="wide button-container">
        <a href="{{ path('item_form') }}" class="btn btn-primary">Add new item to My Collection</a>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Item</th>
            <th>Category</th>
            <th>Genre</th>
            <th>Description</th>
        </tr>
        </thead>

        <tbody>
        {% for item in items %}
        <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.name }}</td>
            <td>{{ item.category.name }}</td>
            <td>{{ item.genre.name }}</td>
            <td>{{ item.description }}</td>
        </tr>
        </tbody>
        {% endfor %}
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link active" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
{% endblock %}